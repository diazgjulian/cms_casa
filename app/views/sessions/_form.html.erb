  </div>

  <div class="my-5">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", placeholder: "ContraseÃ±a" %>
  </div>

  <div class="inline">
